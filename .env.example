# Shared
DOMAIN=minecrox.ktoxz.id.vn

# Backend
BACKEND_ENV=dev
BACKEND_CORS_ORIGINS=http://localhost:3000
IP_HASH_SECRET=change-me-in-prod

DATABASE_URL=sqlite+aiosqlite:///./app.db

# S3 (Vietnix)
S3_ENDPOINT_URL=https://s3.vn-hcm-1.vietnix.cloud
# Optional: endpoint used ONLY for generating presigned download URLs.
# Set this to a hostname reachable from users' browsers.
# Example (local MinIO): http://localhost:9000
# Example (prod): https://s3.your-domain.com
S3_PRESIGN_ENDPOINT_URL=
S3_REGION=
S3_BUCKET=minecrox-prod
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Presigned URLs cannot be infinite; /download/{slug} is the permanent URL.
S3_PRESIGN_TTL_SECONDS=600

MAX_UPLOAD_BYTES=104857600
FILE_EXPIRE_DAYS=3
DOWNLOAD_LOG_RETENTION_DAYS=90
ENABLE_SCHEDULER=true

# Rate limiting (SlowAPI formats)
RATE_LIMIT_UPLOAD_3_PER_HOUR=3/hour
RATE_LIMIT_UPLOAD_10_PER_DAY=10/day
RATE_LIMIT_DOWNLOAD_PER_MINUTE=30/minute
RATE_LIMIT_REDIS_URL=

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
